extends ../../layout.jade
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")
        h1 Subir nueva imagen
        form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST")
            div(class="form-group")
                label(for="title") Título
                input(type="text", value="#{imagen.title}" name="title", placeholder="Título de la imagen...", id="title" class="form-control")
            div(class="row top-space")
                div(class="col-xs-12 cols-sm-6")
                    input(type="submit", value="Guardar" class="btn btn-info")         